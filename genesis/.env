# ====================================================================================
# PostgreSQL 配置
# ====================================================================================
# PostgreSQL 超级用户（默认: postgres）
POSTGRES_USER=postgres

# PostgreSQL 超级用户密码（必须修改）
POSTGRES_PASSWORD=your_postgres_password

# PostgreSQL 默认数据库（默认: postgres）
POSTGRES_DB=postgres

# ====================================================================================
# MySQL 配置
# ====================================================================================
# MySQL root 用户密码（必须修改）
MYSQL_ROOT_PASSWORD=your_root_password

# MySQL 默认数据库
MYSQL_DATABASE=app_db

# MySQL 普通用户
MYSQL_USER=app_user

# MySQL 普通用户密码（必须修改）
MYSQL_PASSWORD=your_password

# ====================================================================================
# Redis 配置
# ====================================================================================
# Redis 访问密码（必须修改）
REDIS_PASSWORD=your_redis_password

# ====================================================================================
# Kafka 配置
# ====================================================================================
# 单机模式 Kafka 集群 ID
# 生成命令: docker run --rm apache/kafka:latest /opt/kafka/bin/kafka-storage.sh random-uuid
KAFKA_CLUSTER_ID_STANDALONE=LCcu2aYwTuO-L87pggvLeQ

# 集群模式 Kafka 集群 ID
# 生成命令: docker run --rm apache/kafka:latest /opt/kafka/bin/kafka-storage.sh random-uuid
KAFKA_CLUSTER_ID_CLUSTER=cInjwpykSJ-eg3Ze06J81w